#include <stdio.h> 
float power1(float num, int p); 
void power2(float num, int p, float *result); 
int main() {    int power;  
float number, result;   
printf("Enter the number and power: \n");  
scanf("%f %d", &number, &power); 
printf("power1(): %.2f\n", power1(number, power));    
power2(number,power,&result);   
printf("power2(): %.2f\n", result); 
scanf("\n");
return 0; 
}
float power1(float num, int p)
{
	int i;
	float temp=1;
	while (p != 0)
	{
		temp = num;
		if (p > 0)
		{
			p--;
			for (i = 0; i <p; p--)
			{
				temp = num*temp;
			}
		}
		else
		{
			p++;
			for (i = 0; i >p; p++)
			{
				if (p == -1)
				{
					temp = 1 / (num*temp);
				}
				else
				{
					temp = num*temp;
				}
			}
		}
	}
	return temp;
} 
void power2(float num, int p, float *result)
{
	int i;
	float temp = 1;
	while (p != 0)
	{
		temp = num;
		if (p > 0)
		{
			p--;
			for (i = 0; i <p; p--)
			{
				temp = num*temp;
			}
		}
		else
		{
			p++;
			for (i = 0; i >p; p++)
			{
				if (p == -1)
				{
					temp = 1 / (num*temp);
				}
				else
				{
					temp = num*temp;
				}
			}
		}
	}
	*result = temp;
	return;
}
