#include <stdio.h> 
typedef struct 
{
	char source;   
	char code; 
}Rule; 
void encodeChar(Rule table[5], char *s, char *t); 
int main() 
{
	char s[80],t[80];  
	Rule table[5] = {'a','d', 'b','z', 'z','a', 'd','b', '\0','\0' };  
	printf("Source string: \n");   
	scanf("%s", s);  
	encodeChar(table,s,t);  
	printf("Encoded string: %s\n", t);   
	scanf("\n");
	return 0; 
}
void encodeChar(Rule table[5], char *s, char *t) 
{
	int i,j;
	for (i = 0; s[i] != '\0'; i++)
	{
		for (j = 0; j < 4; j++)
		{
			if (s[i] == table[j].source)
			{
				t[i] = table[j].code;
				break;
			}
			else
				t[i] = s[i];
		}
		
	}
	t[i] = '\0';	
}
