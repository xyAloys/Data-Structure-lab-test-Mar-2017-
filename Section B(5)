#include <stdio.h> 
int minOfMax(int ar[4][4]); 
int main() 
{  
	int ar[4][4],row,col,min;   
	printf("Enter the matrix (4x4) row by row: \n");   
	for (row=0; row<4; row++)    
	for (col=0; col<4; col++)     
		scanf("%d", &ar[row][col]);  
	min=minOfMax(ar);  
	printf("minOfMax(): %d\n", min);   
	scanf("\n");
	return 0;
} 
int minOfMax(int ar[4][4])
{ 
	int i, j, max,tmax, momax = ar[0][0];
	for (i = 0; i < 4; i++)
	{
		tmax = ar[i][0];
		for (j = 0; j < 4; j++)
		{
			if (tmax < ar[i][j])
			{
				max = ar[i][j];
				if (i == 0)
					momax = max;
			}
		}
		if (max < momax)
		{
			momax = max;
		}
	}
	return momax;
} 
