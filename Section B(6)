#include <stdio.h>
void readMatrix(int M[4][4]);
void reduceMatrix(int matrix[4][4]);
void display(int M[4][4]);
int main()
{
	int A[4][4];
	readMatrix(A);
	reduceMatrix(A);
	printf("reduceMatrix(): \n");
	display(A);
	return 0;
}
void display(int M[4][4])
{
	int l, m;
	for (l = 0; l < 4; l++) {
		for (m = 0; m < 4; m++)
			printf("%d ", M[l][m]);
		printf("\n");
	}
	printf("\n");
	scanf("\n");
}
void readMatrix(int M[4][4])
{
	int i, j;
	printf("Enter the matrix (4x4) row by row: \n");
	for (i = 0; i<4; i++)
	for (j = 0; j<4; j++)
		scanf("%d", &M[i][j]);
}
void reduceMatrix(int matrix[4][4])
{
	int i, j,k;
	for (k = 0; k < 3;k++)
	for (i = 0; i<4; i++)
	for (j = 0; j<4; j++)
	if (i>0){
		if ((i == 1 && j == 0) || (i == 2 && j<2) || (i == 3 && j<3))
		{
			matrix[i-1][j] += matrix[i][j];
			matrix[i][j] = 0;
		}
	}
}
